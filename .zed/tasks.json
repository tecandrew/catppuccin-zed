[
  {
    "label": "Build (all)",
    "command": "whiskers zed.tera"
  },
  {
    "label": "Build (mauve only)",
    "command": "whiskers zed.tera --overrides '{\"accent\": [\"mauve\"]}'"
  },
  {
    "label": "Clean",
    "command": "rm themes/*.json"
  },
  {
    "label": "Test",
    "command": "whiskers zed.tera --overrides '{\"accent\": [\"mauve\"]}' --check"
  },
  {
    "label": "CI: whiskers",
    "command": "act -W .github/workflows/whiskers.yml"
  }
]
